{
  "name": "plant-server",
  "version": "1.0.0",
  "main": "src/index.ts",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
    "start": "ts-node src/index.ts",
    "build": "tsc",
    "lint": "eslint . --ext .ts --ignore-path .gitignore",
    "hooky": "bash ../.git/hooks/pre-commit",
    "lint:ci": "yarn lint --format junit -o ../results/tslint/result.xml",
    "docker:build": "docker build -t registry.kataldi.com/plant-server .",
    "docker:push": "docker push registry.kataldi.com/plant-server",
    "docker:run": "docker run -p 4000:4000 --rm registry.kataldi.com/plant-server"
  },
  "dependencies": {
    "config": "^3.2.2",
    "graphql-iso-date": "^3.6.1",
    "graphql-yoga": "^1.18.1",
    "influx": "^5.4.0",
    "morgan": "^1.9.1",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^0.17.4"
  },
  "devDependencies": {
    "@types/graphql": "^14.2.3",
    "@types/node": "^12.7.2",
    "@typescript-eslint/eslint-plugin": "^2.0.0",
    "@typescript-eslint/parser": "^2.0.0",
    "eslint": "^6.1.0",
    "eslint-config-prettier": "^6.0.0",
    "husky": "^3.0.3",
    "lint-staged": "^9.2.1",
    "nodemon": "^1.19.1",
    "prettier": "^1.18.2",
    "ts-node": "^8.3.0",
    "typescript": "^3.5.3"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "printWidth": 100
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js,json,css,md}": [
      "prettier --write",
      "git add"
    ],
    "*.{ts,js}": [
      "eslint --fix",
      "git add"
    ]
  }
}
