{
  "name": "plant-server",
  "version": "1.0.0",
  "main": "src/index.ts",
  "license": "MIT",
  "scripts": {
    "dev": "DEBUG=knex:query nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
    "start": "ts-node src/index.ts",
    "build": "tsc",
    "lint": "eslint . --ext .ts --ignore-path .gitignore",
    "lint:fix": "eslint . --ext .ts --ignore-path .gitignore --fix",
    "pre-commit": "bash ../.git/hooks/pre-commit",
    "migrate": "NODE_CONFIG_DIR=../config knex migrate:latest --knexfile knexfile.ts --cwd src",
    "migrate:make": "NODE_CONFIG_DIR=../config knex migrate:make -x ts --knexfile knexfile.ts --cwd src",
    "migrate:down": "NODE_CONFIG_DIR=../config knex migrate:down --knexfile knexfile.ts --cwd src",
    "docker:build": "docker build -t registry.kataldi.com/plant-server .",
    "docker:push": "docker push registry.kataldi.com/plant-server",
    "docker:build:push": "yarn docker:build && yarn docker:push",
    "docker:run": "docker run -p 4000:4000 --rm registry.kataldi.com/plant-server"
  },
  "dependencies": {
    "apollo-server-fastify": "2.12.0",
    "class-validator": "0.11.1",
    "config": "3.3.1",
    "fastify": "2.13.0",
    "graphql-iso-date": "3.6.1",
    "knex": "0.20.13",
    "pg": "8.0.2",
    "reflect-metadata": "0.1.13",
    "type-graphql": "0.17.6"
  },
  "devDependencies": {
    "@types/graphql": "14.5.0",
    "@types/node": "12.12.35",
    "@typescript-eslint/eslint-plugin": "2.27.0",
    "@typescript-eslint/parser": "2.27.0",
    "eslint": "6.8.0",
    "eslint-config-airbnb-base": "14.1.0",
    "eslint-config-prettier": "6.10.1",
    "eslint-import-resolver-typescript": "2.0.0",
    "eslint-plugin-import": "2.20.2",
    "husky": "4.2.5",
    "lint-staged": "10.1.3",
    "nodemon": "2.0.3",
    "prettier": "2.0.4",
    "ts-node": "8.8.2",
    "typescript": "3.8.3"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "printWidth": 120
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js,json,css,md}": [
      "prettier --write"
    ],
    "*.{ts,js}": [
      "eslint --fix"
    ]
  }
}
