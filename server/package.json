{
  "name": "plant-server",
  "version": "1.0.0",
  "main": "src/index.ts",
  "license": "MIT",
  "scripts": {
    "dev": "DEBUG=knex:query nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
    "start": "ts-node src/index.ts",
    "build": "tsc",
    "lint": "eslint . --ext .ts --ignore-path .gitignore",
    "lint:ci": "yarn lint --format junit -o ../results/tslint/result.xml",
    "lint:fix": "eslint . --ext .ts --ignore-path .gitignore --fix",
    "pre-commit": "bash ../.git/hooks/pre-commit",
    "migrate": "NODE_CONFIG_DIR=../config knex migrate:latest --knexfile knexfile.ts --cwd src",
    "migrate:make": "NODE_CONFIG_DIR=../config knex migrate:make -x ts --knexfile knexfile.ts --cwd src",
    "migrate:down": "NODE_CONFIG_DIR=../config knex migrate:down --knexfile knexfile.ts --cwd src",
    "docker:build": "docker build -t registry.kataldi.com/plant-server .",
    "docker:push": "docker push registry.kataldi.com/plant-server",
    "docker:build:push": "yarn docker:build && yarn docker:push",
    "docker:run": "docker run -p 4000:4000 --rm registry.kataldi.com/plant-server"
  },
  "dependencies": {
    "class-validator": "0.11.0",
    "config": "3.2.4",
    "graphql-iso-date": "3.6.1",
    "graphql-yoga": "1.18.3",
    "knex": "0.20.6",
    "morgan": "1.9.1",
    "pg": "7.17.0",
    "reflect-metadata": "0.1.13",
    "type-graphql": "0.17.5"
  },
  "devDependencies": {
    "@types/graphql": "14.5.0",
    "@types/node": "12.12.22",
    "@typescript-eslint/eslint-plugin": "2.13.0",
    "@typescript-eslint/parser": "2.13.0",
    "eslint": "^6.1.0",
    "eslint-config-airbnb-base": "14.0.0",
    "eslint-config-prettier": "6.7.0",
    "eslint-import-resolver-typescript": "1.1.1",
    "eslint-plugin-import": "2.18.2",
    "husky": "3.1.0",
    "lint-staged": "9.5.0",
    "nodemon": "1.19.4",
    "prettier": "1.19.1",
    "ts-node": "8.5.4",
    "typescript": "3.7.4"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "printWidth": 120
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js,json,css,md}": [
      "prettier --write",
      "git add"
    ],
    "*.{ts,js}": [
      "eslint --fix",
      "git add"
    ]
  }
}
